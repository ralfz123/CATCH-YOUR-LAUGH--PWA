<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/head') %>
    <title>Favourites | CATCH YOUR LAUGH</title>
  </head>
  <body>
    <%- include ('../partials/header') %>

    <main>
      <section id="favourites">
        <h1>Favourites</h1>
        <a href="/">Back</a>

        <button class="deleteAllBtn">Delete all</button>

        <ol>
          <p>No favourite combo's yet üôÅ</p>

          <% favouritesArray.forEach(item => { %>
          <li>
            <img src="<%= item.url %>" alt="" />
            <div>
              <p><%= item.setup %></p>
              <p><%= item.punchline %></p>
            </div>
            <div>
              <button class="checkBtn"></button>
              <button class="deleteBtn"></button>
            </div>
          </li>
          <% }) %>
        </ol>
      </section>
    </main>

    <%- include ('../partials/footer') %>
  </body>
</html>
