<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('../partials/head') %>
    <title>Favourites | CLY 😹</title>
  </head>
  <body>
    <%- include ('../partials/header') %>

    <main>
      <section id="favourites">
        <h1>Favourites</h1>
        <a href="/">Back</a>

        <button class="deleteAllBtn">Delete all</button>

        <ol>
          <% if(favouritesArray.length > 0){ %>
            
            <% favouritesArray.forEach(object => { %>
          <li>
            <img src="<%= object.cat %>" alt="" />
            <div>
              <p><%= object.setup %></p>
              <p><%= object.punchline %></p>
            </div>

            <div>
              <a href="/favourites/<%- object.id %>" class="checkBtn"></a>
              <form action="" method="GET">
                <button class="deleteBtn"></button>
              </form>
            </div>
          </li>
          <% }) %> 
          
          <% }else{ %>
          <p>No favourite combo's yet 🙁</p>
          <% }%>
        </ol>
      </section>
    </main>

    <%- include ('../partials/footer') %>
  </body>
</html>
