<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ('./partials/head') %>
    <title>Home | CATCH YOUR LAUGH</title>
  </head>
  <body>
    <%- include ('./partials/header') %>

    <main>
      <section id="combo-generator">
        <div class="loader"></div>
        <form action="" method="POST">
          <article id="cat-images">
            <input type="text" name="cat" width="200px" value="<%= filteredDataCat.url %>" id="image-cat">
            <img src="<%= filteredDataCat.url %>" alt="">
          </article>

          <article id="jokes" style="height: 12em;"> 
            <input type="text" name="joke" value="<%= filteredDataJokes.setup %>" >
            <input type="text" name="punchline" value="<%= filteredDataJokes.punchline %>" >
            <input type="text" name="id" value="<%= filteredDataJokes.id %>" >
            <label id="joke" for="joke"><%= filteredDataJokes.setup %></label>
            <label id="punchline" for="punchline"><%= filteredDataJokes.punchline %></label>
          </article>

          <button id="comboBtn" type="submit">Another combo!</button>

          <article id="like-area">
            <h2>Like this combo!</h2>
            <button id="likeBtn" type="submit">❤️</button>
            <a href="favourites">My Favourites</a>
          </article>
        </form>
      </section>
    </main>

    <%- include ('./partials/footer') %>
  </body>
</html>
